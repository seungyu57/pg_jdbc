{
  "meta": {
    "label": "PostgreSQL(JDBC)",
    "description": "Read PostgreSQL tables through JDBC",
    "icon": "icon-database"
  },
  "readable": true,
  "writable": false,

  "paramsPythonSetup": "params.py",
  "params": [
    {
      "name": "sep_conn",
      "label": "Connection",
      "type": "SEPARATOR"
    },

    {
      "name": "pg_credentials",
      "label": "Credentials preset",
      "type": "PRESET",
      "parameterSetId": "jdbc-basic-auth",
      "mandatory": true,
      "description": "Select a preset that contains PostgreSQL user/password."
    },

    {
      "name": "jar_path",
      "label": "JDBC driver jar path",
      "type": "STRING",
      "mandatory": false,
      "visibilityCondition": "0",
      "description": "(Hidden) Uses plugin.json config.jar_path by default."
    },

    {
      "name": "schema",
      "label": "Schema",
      "type": "SELECT",
      "mandatory": true,
      "getChoicesFromPython": true,
      "triggerParameters": ["pg_credentials", "jar_path"],
      "description": "Schema list refreshes after selecting credentials."
    },
    {
      "name": "table",
      "label": "Table",
      "type": "SELECT",
      "mandatory": true,
      "getChoicesFromPython": true,
      "triggerParameters": ["schema", "pg_credentials", "jar_path"],
      "description": "Table list refreshes after selecting schema."
    },

    {
      "name": "limit",
      "label": "Preview / read limit (0 = no limit)",
      "type": "INT",
      "defaultValue": 1000,
      "mandatory": false
    }
  ]
}