{
  "meta": {
    "label": "PostgreSQL(JDBC)",
    "description": "Read PostgreSQL tables through JDBC",
    "icon": "icon-database"
  },
  "readable": true,
  "writable": false,

  "paramsPythonSetup": "params.py",
  "params": [
    {
      "name": "sep_conn",
      "label": "Connection",
      "type": "SEPARATOR"
    },

    {
      "name": "jar_path",
      "label": "JDBC driver jar path",
      "type": "STRING",
      "defaultValue": "/data/test_ssg/postgresql-42.7.10.jar",
      "mandatory": true,
      "visibilityCondition": "0"
    },

    {
      "name": "admin_db",
      "label": "Admin DB (for listing databases)",
      "type": "STRING",
      "defaultValue": "postgres",
      "mandatory": true
    },

    {
      "name": "user",
      "label": "User",
      "type": "STRING",
      "mandatory": true
    },
    {
      "name": "password",
      "label": "Password",
      "type": "PASSWORD",
      "mandatory": true
    },

    {
      "name": "database",
      "label": "Database",
      "type": "SELECT",
      "mandatory": true,
      "getChoicesFromPython": true,
      "triggerParameters": ["user", "password", "admin_db"]
    },

    {
      "name": "schema",
      "label": "Schema",
      "type": "SELECT",
      "mandatory": true,
      "getChoicesFromPython": true,
      "triggerParameters": ["database", "user", "password"]
    },

    {
      "name": "table",
      "label": "Table",
      "type": "SELECT",
      "mandatory": true,
      "getChoicesFromPython": true,
      "triggerParameters": ["schema", "database", "user", "password"]
    },

    {
      "name": "limit",
      "label": "Preview / read limit (0 = no limit)",
      "type": "INT",
      "defaultValue": 1000
    }
  ]
}